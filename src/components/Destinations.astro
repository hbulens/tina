---
import Container from "./Container.astro"
import Topic from "./Topic.astro";
import destinationsSpain from './Data/destinations-spain.json';
import destinationsFrance from './Data/destinations-france.json';
import destinationsBelgium from './Data/destinations-belgium.json';
import destinationsItaly from './Data/destinations-italy.json';

import Destination from "./pages/root/destination.astro";
import Placeholder from "./pages/root/placeholder.astro";

import "../styles/Destinations.css";

---
<Container>
<div class="relative flex flex-col items-center md:flex-row" id="services">
    <Topic title="Destinations" description="Some of the top destinations for your next cycling trip.">
</div>
<div class="flex-row items-center py-2">

    <Destination title="Spain" destinations={destinationsSpain} />
    <Placeholder title="France" img="/destinations/pyrenees.jpg"  />
    <Placeholder title="Belgium" img="/destinations/vlaanderen.jpg" />
    <Placeholder title="Italy" img="/destinations/dolomites/stelvio.jpg" />

</div>
